
@model BikeSite.Models.PlaceModel.RootObject

    @foreach (var place in Model.places)
    {

        <div class="row">
            <div class="box">
                <div class="col-lg-12">
                    <div class="intro-text text-center">
                        @place.name
                        @foreach (var act in place.activities)
                        {
                            <strong>@act.rank</strong>
                        }
                    </div>
                    <div class="col-md-6">
                        <img class="img-responsive img-border-left" src="@place.activities.Select(s => s.thumbnail)" alt="">
                    </div>
                    <div class="col-md-6">
                        <p>Description:</p>
                        <p>@place.description</p>
                        <p><a href="" class="btn btn-primary" role="button">Details</a></p>
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>

    }
}
